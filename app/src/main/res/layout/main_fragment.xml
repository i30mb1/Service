<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.shuvagin_l19_service.utils.Theme" />

        <variable
            name="fragment"
            type="com.example.shuvagin_l19_service.ui.main.MainFragment" />

        <variable
            name="viewModel"
            type="com.example.shuvagin_l19_service.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_main_fragment_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->fragment.saveLog(view)}"
            android:text="@string/main_fragment_add" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_main_fragment_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->fragment.saveLog(view)}"
            android:text="@string/main_fragment_delete" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_main_fragment_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->fragment.saveLog(view)}"
            android:text="@string/main_fragment_update" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_main_fragment_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->fragment.saveLog(view)}"
            android:text="@string/main_fragment_create" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_main_fragment_put"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->fragment.saveLog(view)}"
            android:text="@string/main_fragment_put" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_main_fragment_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->fragment.saveLog(view)}"
            android:text="@string/main_fragment_read" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_main_fragment_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->fragment.saveLog(view)}"
            android:text="@string/main_fragment_log" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_main_fragment_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->fragment.saveLog(view)}"
            android:text="@string/main_fragment_open" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_main_fragment_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->fragment.saveLog(view)}"
            android:text="@string/main_fragment_save" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_main_fragment_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->fragment.saveLog(view)}"
            android:text="@string/main_fragment_edit" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_main_fragment_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->fragment.saveLog(view)}"
            android:text="@string/main_fragment_upload" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_main_fragment_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->fragment.saveLog(view)}"
            android:text="@string/main_fragment_load" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_main_fragment_read_logs"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="@{()->fragment.readLog()}"
            android:text="@string/main_fragment_read_logs" />


        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_main_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:constraint_referenced_ids="b_main_fragment_add,b_main_fragment_delete,b_main_fragment_update,b_main_fragment_create,b_main_fragment_put,b_main_fragment_read,b_main_fragment_log,b_main_fragment_open,b_main_fragment_save,b_main_fragment_edit,b_main_fragment_upload,b_main_fragment_load,b_main_fragment_read_logs"
            app:flow_maxElementsWrap="3"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scroll_main_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?myBackgroundColor"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@id/bg_main_fragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flow_main_fragment">

            <TextView
                android:id="@+id/tv_main_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:padding="16dp"
                tools:text="@tools:sample/full_names" />
        </ScrollView>


        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/bg_main_fragment"
            changeTheme="@{viewModel.isLightTheme}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:checkedButton="@+id/b_light_theme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/b_light_theme"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->viewModel.setLightTheme(Theme.LIGHT)}"
                android:text="@string/main_fragment_light_theme" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/b_dark_theme"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->viewModel.setLightTheme(Theme.DARK)}"
                android:text="@string/main_fragment_dark_theme" />
        </com.google.android.material.button.MaterialButtonToggleGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
